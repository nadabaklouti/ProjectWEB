{% extends('base.html.twig') %}

{% block layout %}

    <link rel="stylesheet" href="{{ asset('assets/css/event-css/event-style.css') }}" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}

{% block username %}{{ user }}{% endblock %}
{% block content %}
    <div class="event-details-content">
        <div class="event-details-bloc">

            <div class="event-details-bloc1">

                <p>DÉTAILS</p>
                <table class="table">

                    <tbody>
                    <tr>
                        <th scope="row">Date:</th>
                        <td>{{ event.dateDebutEvent |date("d/m/Y")}}</td>

                    </tr>
                    <tr>
                        <th scope="row">Horaire:</th>
                        <td>{{ event.heureDebutEvent|date('H:i') }} -  {{ event.heureFinEvent|date('H:i') }}</td>

                    </tr>
                    <tr>
                        <th scope="row">Prix:</th>
                        <td>{{ event.prixEvent }}</td>

                    </tr>
                    <tr>
                        <th scope="row">Catégorie:</th>
                        <td>{{ event.EventCategorie.nomEventCategorie }}</td>

                    </tr>
                    </tbody>
                </table>


                <p>LIEU</p>
                <table class="table">

                    <tbody>
                    <tr>

                        <td><i class="fas fa-map-marker-alt"></i><span class="event-lieu-text">{{ event.adresseEvent}}</span></td>

                    </tr>

                    </tbody>
                </table>

            </div>


            <div class="event-details-bloc2">
                <h1>{{ event.nomEvent }}</h1>
                <img class="event-details-image"
                     src="{{ asset('uploads/photos/' ~ event.imageEvent) }}">


                <p>DESCRIPTION</p>
                <table class="table">

                    <tbody>
                    <tr>

                        <td>{{ event.descriptionEvent}}</td>

                    </tr>

                    </tbody>
                </table>


                <a href="{{ path('participerEvent',{'idEvent':event.idEvent})  }}"><button type="button" class="btn btn-success btn-lg">Participer</button></a>

                <a href=""><button type="button" class="btn btn-info btn-lg">Inviter</button></a>



            </div>


        </div>

    </div>

{% endblock %}
